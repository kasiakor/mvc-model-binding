@model IList<string>

@{
    ViewBag.Title = "Surnames";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Surnames</h2>

@if (Model.Count == 0) {
    using (Html.BeginForm())
    {
        for (int i = 0; i < 3; i++)
        {
            <div>
                <label>@(i + 1):</label>
                @Html.TextBox("surnames")
            </div>
        }
    <button type="submit">Submit</button>
        }
    }
    else
    {
        foreach (string str in Model)
        {
        <p> @str </p>
        }
    @Html.ActionLink("Back","Surnames")
    }



